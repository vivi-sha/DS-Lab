#include<stdio.h>
int top=-1;
void push(int a[],int n)
{
int ele;
if(top==n-)
{  printf("\nOVERFLOW");
   return;
}
else
{  printf("Enter the element to be added ");
   scanf("%d",&ele);
   top=top+1;
   a[top]=ele;
}
printf("Final array: ");
for(int i=0;i<=top;i++)
{printf("%d ",a[i]);}
}
void pop(int a[],int n)
{
if(top==-1)
{   printf("UNDERFLOW");
    return;
}
else
{  printf("Element deleted is %d",a[top]);
   top=top-1;
}
printf("\nFinal array: ");
for(int i=0;i<=top;i++)
{printf("%d",a[i])}
}
void display(int a[])
{
if(top==-1)
{printf("Stack is Empty");}
else
{  printf("Final array: ");
   for(int i=0;i<=top;i++)
   {printf("%d",a[i]);}
}
}
void main()
{ 
int n,a[50],ele,x=1;
printf("Enter size of the array: ");
scanf("%d",&n);
if(n!=0)
{printf("Enter values: (enter 0 to end array)");}
for(int i=0;i<n;i++)
{  scanf("%d",&a[i]);
   if(a[i]==0)
   {break;}
   top++;
}
while(x!=0)
{
printf("\n\nOperation?\n1-Push 2-Pop 3-Display 0-Exit\n");
scanf("%d",&x);
if(x==1){push(a,n);}
else if(x==2){pop(a,n);}
else if(x==3){display(a);}
else{exit(0);}
}
}
